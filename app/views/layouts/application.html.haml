!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    - cache 'application_header_' + user_signed_in?.to_s  do
      %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}/
      %title
        = t('katalog.application.title')

      %link{:rel => "shortcut icon", :href => image_path('favicon.ico')}/

      = stylesheet_link_tag 'doku-zug.ch/typolight', 'doku-zug.ch/basic', 'doku-zug.ch/content', 'doku-zug.ch/layout', 'doku-zug.ch/navigation', 'doku-zug.ch/welcome', 'doku-zug.ch/application', :media => 'all'
      = stylesheet_link_tag 'katalog', :media => 'all'
      = stylesheet_link_tag 'katalog_internal' if user_signed_in?
      = stylesheet_link_tag 'scaffold'
      = stylesheet_link_tag 'formtastic', 'formtastic_changes'
      = stylesheet_link_tag 'pagination'
      = stylesheet_link_tag 'compiled/screen.css', :media => 'all'
      = stylesheet_link_tag 'compiled/print', :media => 'print'
      /[if lt IE 7]
        = stylesheet_link_tag 'compiled/ie6.css', :media => 'screen, projection'
    = csrf_meta_tag
  %body#top
    =# query_review_output unless Gem::Specification.find_all_by_name('query_reviewer').empty?
    #wrapper
      - cache 'header_' + user_signed_in?.to_s do
        - unless user_signed_in?
          = render 'shared/public_header'
        - else
          #over-main
            = render 'shared/breadcrumb_navigation'
      #container
        #left
          - if user_signed_in?
            #logo-signed-in= render 'shared/logo'
          .inside
            #mainmenu.mod_navigation.block
              %a.invisible{:href => "#skipNavigation3"}
                = t('katalog.application.skip_navigation')
              = render_navigation(:context => :main)
              %a#skipNavigation3.invisible{:name => "skipNavigation3"}
                &nbsp;
        #right
          .inside
            .mod_newslist.block
              %h1
                = t('katalog.application.scroll')
              .layout_full.block.odd
                = render 'shared/topic_index'
              %h1
                = t('katalog.application.grub')
              .layout_full.block.last.odd
                = render 'shared/tag_cloud'
        #main
          .inside
            .mod_newslist.block
              = render :partial => 'shared/flash', :locals => {:flash => flash}
              = yield
          #clear
      #footer
        .inside
          = render 'shared/public_footer' unless user_signed_in?
          .clear
    = javascript_include_tag :defaults
    = yield :javascript
    
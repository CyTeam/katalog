!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}/
    %title Katalog
    - @pdfkit_options && @pdfkit_options.each do |key, value|
      %meta{:content => value, :name => "pdfkit-#{key}"}/
    = stylesheet_link_tag 'doku-zug.ch/typolight', 'doku-zug.ch/basic', 'doku-zug.ch/content', 'doku-zug.ch/layout', 'doku-zug.ch/navigation', 'doku-zug.ch/welcome', 'doku-zug.ch/application', :media => 'all'
    = stylesheet_link_tag 'katalog', :media => 'all'
    = stylesheet_link_tag 'katalog_internal' if user_signed_in?
    = stylesheet_link_tag 'scaffold'
    = stylesheet_link_tag 'formtastic', 'formtastic_changes'
    = stylesheet_link_tag 'pagination'
    = stylesheet_link_tag 'compiled/screen.css', :media => 'all'
    = stylesheet_link_tag 'compiled/print', :media => 'print'
    /[if lt IE 7]
      = stylesheet_link_tag 'compiled/ie6.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body#top
    #wrapper
      #header
        .inside
          = render user_signed_in? ? 'shared/internal_header' : 'shared/public_header'
      #container
        #left
          .inside
            #mainmenu.mod_navigation.block
              %a.invisible{:href => "#skipNavigation3"} Navigation überspringen
              %ul.level_1
                = navigation_item("Dossier auflisten", dossiers_path)
                = navigation_item("Dossier suchen", search_dossiers_path)
                = navigation_item(t('controllers.index.keyword'), keywords_path)
                - if user_signed_in?
                  = navigation_item("Dossier anlegen", new_dossier_path)
                  = navigation_item("Titel anlegen", new_topic_path)
                  = navigation_item("Abmelden", destroy_user_session_path)
                  = navigation_item("Standorte verwalten", locations_path)
                  = navigation_item("Dossier Art verwalten", container_types_path)
                - else
                  = navigation_item("Anmelden", new_user_session_path)
              %a#skipNavigation3.invisible{:name => "skipNavigation3"} &nbsp;
        #right
          .inside
            .mod_newslist.block
              %h1 Blättern
              .layout_full.block.odd
                = render 'shared/topic_index'
              %h1 Stöbern
              .layout_full.block.last.odd
                = render 'shared/tag_cloud'
        #main
          .inside
            .mod_newslist.block
              = yield
          #clear
      #footer
        .inside
          = render 'shared/public_footer' unless user_signed_in?
          .clear

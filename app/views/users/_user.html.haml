%tr[user]
  %td
    = user.email
  %td
    = user.roles.map{|role| t(role.name, :scope => 'cancan.roles')}.join(', ')
  %td
    = user.created_at.to_date
  %td
    -#= link_to image_tag('icons/show.png', :title => t('tooltips.locations.show')), user
    = link_to image_tag('icons/edit.png', :title => t('tooltips.locations.edit')), edit_user_path(user)
    = link_to image_tag('icons/delete.png', :title => t('tooltips.locations.delete')), user, :confirm => t_confirm_delete(user), :method => :delete
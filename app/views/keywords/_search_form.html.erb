<% cache [@query == nil ? '' : @query, params[:query], 'keywords_search_form'] do %>
  <%= form_tag(search_keywords_path, :method => :get, :id => 'search_form') do %>
    <label for="search_text"><%= t('katalog.the_search') %>:</label>
    <%= text_field :search, :text, :style => 'width: 30em', :autocomplete => :off %>
    <%= image_submit_tag('doku-zug.ch/search2.png', :alt => t('katalog.search')) %>
  <% end %>

  <%= javascript_tag "$('#search_text').val('#{escape_javascript(@query || params[:query])}');" %>
  <%= javascript_tag "$('#search_text').focus();" %>
<% end %>
<%= form_tag(search_keywords_path, :method => :get, :id => 'search_form') do %>
  <label for="search_text">Suche:</label>
  <%= text_field :search, :text, :style => 'width: 30em' %>
  <%= image_submit_tag('doku-zug.ch/search2.png', :alt => t('katalog.search')) %>
<% end %>

<%= javascript_tag "Form.Element.setValue('search_text', '#{escape_javascript(@query || params[:query])}');" %>
<%= javascript_tag "$('search_text').activate();" %>

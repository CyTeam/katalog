%h2= t('devise.forgot_your_password')

= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f|
  = devise_error_messages!
  = f.inputs do
    = f.input :email, :input_html => {'data-autofocus' => true}
  = f.actions do
    = f.button t('devise.send_reset_instructions')

= render :partial => "devise/shared/links"

<div id="dossiers" class="ce_table block">
<table>
<% cache :dossier_list_header do %>
  <tr>
    <th><%= t_attr('signature') %></th>
    <th><%= t_attr('title') %></th>
    <th><%= t_attr('container_type') %></th>
    <th><%= t_attr('location') %></th>
    <th style="text-align: right"><%= t_attr('document_count') %></th>
    <th></th>
  </tr>
<% end %>

<%= render @dossiers %>

</table>
</div>
<%
  if params[:search] and params[:search][:text].present?
    signatures, words = Dossier.split_search_words(params[:search][:text])
    for word in words
%>
<%= javascript_tag "Element.highlight($('dossiers'), '#{escape_javascript(word)}', 'match');" %>
<%
    end
  end
%>

<%= t_paginate %>

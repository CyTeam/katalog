<div id="dossiers" class="ce_table block">
<table>
<% cache :dossier_list_header do %>
  <tr>
    <th><%= t('dossier.signature', :scope => [:activerecord, :attributes]) %></th>
    <th><%= t('dossier.title', :scope => [:activerecord, :attributes]) %></th>
    <th><%= t('dossier.container_type', :scope => [:activerecord, :attributes]) %></th>
    <th><%= t('dossier.location', :scope => [:activerecord, :attributes]) %></th>
    <th style="text-align: right"><%= t('dossier.document_count', :scope => [:activerecord, :attributes]) %></th>
    <th></th>
  </tr>
<% end %>

<%= render @dossiers %>

</table>
</div>
<%
  if params[:search] and params[:search][:text].present?
    signatures, words = Dossier.split_search_words(params[:search][:text])
    for word in words
%>
<%= javascript_tag "Element.highlight($('dossiers'), '#{escape_javascript(word)}', 'match');" %>
<%
    end
  end
%>

<%= t_paginate %>

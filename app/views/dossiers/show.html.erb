<h1><%= @dossier %></h1>
<p class="notice"><%= notice %></p>

<ul class="dossier_topic_breadcrumb">
  <% for parent in @dossier.parent_tree %>
    <li><%= link_to_topic(parent) %></li>
  <% end %>
</ul>

<h3>Schlagworte</h3>
<ul class="keywords">
  <% for keyword in @dossier.keywords %>
    <li id="keyword-<%= keyword.id %>">
      <%= @keyword = keyword; in_place_editor_field :keyword, :name, {}, :url => set_name_dossier_keyword_path(@dossier, @keyword) %>
      <%= link_to image_tag('icons/delete.png', :title => ('delete')), dossier_keyword_path(@dossier, keyword), :confirm => t_confirm_delete(keyword), :remote => true, :method => :delete %>
    </li>
  <% end %>
</ul>

<% if @dossier.related_to.present? %>
<h3>Querverweise</h3>
<p>
  <%= @dossier.related_to %>
</p>
<% end %>

<h3>Dokumente</h3>
<table class="document_counts ce_table">
  <tr>
    <%= render :partial => 'dossier_numbers/head', :collection => @dossier.numbers.present %>
  </tr>
  <tr>
    <%= render :partial => 'dossier_numbers/amount', :collection => @dossier.numbers.present %>
  </tr>
</table>

<h3>Dossiers</h3>
<div class="ce_table">
  <table>
    <%= @containers = @dossier.containers; render 'containers/list' %>
  </table>
</div>

<%= link_to t_crud('edit'), edit_dossier_path(@dossier) %> |
<%= link_to t_crud('back'), dossiers_path %>

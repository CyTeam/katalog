<%= semantic_form_for(@dossier) do |f| %>
  <% if @dossier.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@dossier.errors.count, "error") %> prohibited this dossier from being saved:</h2>
    <ul>
    <% @dossier.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.inputs do %>
    <%= f.input :signature %>
    <%= f.input :title %>
    <%= f.input :keyword_list, :as => :text, :input_html => {:rows => @dossier.keyword_list.count + 1} %>
    <%= f.input :related_to %>
    <%= f.input :dossier_number_list, :as => :text, :input_html => {:rows => @dossier.numbers.count} %>
  <% end %>

  <h3>Dossiers <%= link_to image_tag('icons/add.png', :title => 'add'), new_dossier_container_path(@dossier), :remote => true %></h3>
  <div class="ce_table">
    <table class="ce_table" id="container-list" style="width: 100%">
      <%= render 'containers/list_header' %>
      <%= f.fields_for :containers do |container| %>
        <%= render 'containers/form', :container => container %>
      <% end %>
    </table>
  </div>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>

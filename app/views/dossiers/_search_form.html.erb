<%= search_form_for('search', :url => search_dossiers_path) do |f| %>
  <%= f.inputs do %>
    <%= f.input :text, :label => t_attr('text'), :hint => t('formtastic.hints.dossier.text') %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button t(:search, :scope => :katalog) %>
  <% end %>
<% end %>

<%= javascript_tag "Form.Element.setValue('search_text', '#{escape_javascript(@query)}');" %>
<%= javascript_tag "$('search_text').activate();" %>

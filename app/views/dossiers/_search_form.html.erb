<%= search_form_for('search', :url => search_dossiers_path) do |f| %>
  <%= f.inputs do %>
    <%= f.input :signature, :label => t('dossier.signature', :scope => [:activerecord, :attributes]) %>
    <%= f.input :text, :label => t('dossier.text', :scope => [:activerecord, :attributes]) %>
    <%= f.input :kind, :label => t('container.container_type', :scope => [:activerecord, :attributes]) %>
    <%= f.input :location, :label => t('container.location', :scope => [:activerecord, :attributes]), :as => :select, :collection => Location.all.map{|l| [l.title, l.code]} %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button t(:search, :scope => :katalog) %>
  <% end %>
<% end %>

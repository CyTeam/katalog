= semantic_form_for(@report) do |f|
  = f.inputs do
    = f.semantic_errors
    = f.input :name
    = f.input :title
    = f.input :level, :as => :select, :collection => level_for_select
    = f.input :orientation, :as => :select, :collection => orientation_for_select, :include_blank => false
    = f.input :columns, :as => :select, :collection => report_columns_for_select, :multiple => :multiple, :include_blank => false, :hint => true
    = f.input :collect_year_count, :hint => true
    
  = f.buttons do
    = f.commit_button

.contextual
  %a#report-preview-update.icon.icon-update{:href => '#', :style => 'display:none;'}
    = t('crud.action.refresh')

%h3#report-preview-title
  = t('crud.preview')
  
#report-preview
  = render 'reports/show'
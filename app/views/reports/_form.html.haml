= semantic_form_for(@report) do |f|
  = f.inputs do
    = f.semantic_errors
    = f.input :name
    = f.input :title
    = f.input :level, :as => :select, :collection => level_for_select
    = f.input :orientation, :as => :select, :collection => orientation_for_select, :include_blank => false
    = f.input :column_names, :as => :select, :collection => report_column_names_for_select(@report), :multiple => :multiple, :include_blank => false, :hint => false
    = f.input :years_visible
    = f.input :collect_year_count, :hint => true
    = f.input :public

  = f.actions do
    = f.action(:submit)

.contextual
  .icon.icon-update= link_to t_action('refresh'), '#', id: 'preview_report'

%h3#report-preview-title
  = t('crud.preview')

#report-preview
  - if @report.column_names
    = render 'reports/show'
